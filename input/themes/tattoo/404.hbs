{{> head}}
<div class="container">
    <header class="js-top">
        <div>
            <a class="logo" href="{{@website.url}}">
                {{#if @website.logo}}
                    <img src="{{@website.logo}}" alt="{{@website.name}}">
                {{else}}
                    {{@website.name}}
                {{/if}}
            </a>
            {{> menu menus.mainMenu}}
        </div>
    </header>
    <main>
        <section class="hero {{@config.custom.widthHero}}">
            <header>
                <h1>
                    {{ translate 'error.404' }}
                </h1>
                <p>
                    {{ translate 'error.message' }}
                </p>
            </header>
        </section>
    </main>
    {{> footer}}
